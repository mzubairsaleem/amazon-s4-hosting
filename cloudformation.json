{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "DomainName": {
      "Type": "String",
      "Description": "The Domain name for you website",
      "AllowedPattern": "(?!-)[a-zA-Z0-9-.]{1,63}(?<!-)",
      "ConstraintDescription": "must be a valid Domain name."
    }
  },
  "Mappings": {
    "RegionMap": {
      "us-east-1": {
        "S3hostedzoneID": "Z3AQBSTGFYJSTF",
        "websiteendpoint": "s3-website-us-east-1.amazonaws.com"
      },
      "us-west-1": {
        "S3hostedzoneID": "Z2F56UZL2M1ACD",
        "websiteendpoint": "s3-website-us-west-1.amazonaws.com"
      },
      "us-west-2": {
        "S3hostedzoneID": "Z3BJ6K6RIION7M",
        "websiteendpoint": "s3-website-us-west-2.amazonaws.com"
      },
      "eu-west-1": {
        "S3hostedzoneID": "Z1BKCTXD74EZPE",
        "websiteendpoint": "s3-website-eu-west-1.amazonaws.com"
      },
      "ap-southeast-1": {
        "S3hostedzoneID": "Z3O0J2DXBE1FTB",
        "websiteendpoint": "s3-website-ap-southeast-1.amazonaws.com"
      },
      "ap-southeast-2": {
        "S3hostedzoneID": "Z1WCIGYICN2BYD",
        "websiteendpoint": "s3-website-ap-southeast-2.amazonaws.com"
      },
      "ap-northeast-1": {
        "S3hostedzoneID": "Z2M4EHUR26P7ZW",
        "websiteendpoint": "s3-website-ap-northeast-1.amazonaws.com"
      },
      "sa-east-1": {
        "S3hostedzoneID": "Z31GFT0UA1I2HV",
        "websiteendpoint": "s3-website-sa-east-1.amazonaws.com"
      }
    }
  },
  "Resources": {
    "Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Ref": "DomainName"
        },
        "WebsiteConfiguration": {
          "IndexDocument": "index.html",
          "ErrorDocument": "error.html"
        }
      }
    },
    "BucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "Bucket"
        },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "AddPerm",
              "Effect": "Allow",
              "Principal": "*",
              "Action": [
                "s3:GetObject"
              ],
              "Resource": [
                {
                  "Fn::Join": [
                    "",
                    [
                      "arn:aws:s3:::",
                      {
                        "Ref": "DomainName"
                      },
                      "/*"
                    ]
                  ]
                }
              ],
              "Condition": {
                "StringEqualsIgnoreCase": {
                  "aws:UserAgent": "Amazon CloudFront"
                }
              }
            }
          ]
        }
      }
    },
    "BucketWWW": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Fn::Join": [
            "",
            [
              "www.",
              {
                "Ref": "DomainName"
              }
            ]
          ]
        },
        "AccessControl": "PublicRead",
        "WebsiteConfiguration": {
          "RedirectAllRequestsTo": {
            "HostName": {
              "Ref": "DomainName"
            },
            "Protocol": "https"
          }
        }
      }
    },
    "SiteCDN": {
      "Type": "AWS::CloudFront::Distribution",
      "Description": "CDN for site content",
      "Properties": {
        "DistributionConfig": {
          "DefaultCacheBehavior": {
            "AllowedMethods": [
              "GET",
              "HEAD"
            ],
            "MinTTL": "0",
            "Compress": "true",
            "TargetOriginId": "S3Origin",
            "ForwardedValues": {
              "QueryString": "true"
            },
            "ViewerProtocolPolicy": "allow-all"
          },
          "Origins": [
            {
              "DomainName": {
                "Fn::GetAtt": [
                  "Bucket",
                  "DomainName"
                ]
              },
              "Id": "S3Origin",
              "S3OriginConfig": {}
            }
          ],
          "PriceClass": "PriceClass_All",
          "DefaultRootObject": "index.html",
          "Enabled": true,
          "Aliases": [
            {
              "Ref": "DomainName"
            }
          ],
          "CustomErrorResponses": [
            {
              "ErrorCachingMinTTL": 300,
              "ErrorCode": 403,
              "ResponseCode": 403,
              "ResponsePagePath": "/error.html"
            }
          ]
        }
      }
    },
    "SiteCDNWWW": {
      "Type": "AWS::CloudFront::Distribution",
      "Description": "CDN for WWW redirect",
      "Properties": {
        "DistributionConfig": {
          "DefaultCacheBehavior": {
            "AllowedMethods": [
              "GET",
              "HEAD"
            ],
            "MinTTL": "0",
            "Compress": "true",
            "TargetOriginId": "S3OriginWWW",
            "ForwardedValues": {
              "QueryString": "true"
            },
            "ViewerProtocolPolicy": "allow-all"
          },
          "Origins": [
            {
              "DomainName": {
                "Fn::Join": [
                  ".",
                  [
                    "www",
                    {
                      "Ref": "DomainName"
                    },
                    {
                      "Fn::FindInMap": [
                        "RegionMap",
                        {
                          "Ref": "AWS::Region"
                        },
                        "websiteendpoint"
                      ]
                    }
                  ]
                ]
              },
              "Id": "S3OriginWWW",
              "CustomOriginConfig": {
                "HTTPPort": "80",
                "HTTPSPort": "443",
                "OriginProtocolPolicy": "http-only"
              }
            }
          ],
          "PriceClass": "PriceClass_All",
          "Enabled": true,
          "Aliases": [
            {
              "Fn::Join": [
                "",
                [
                  "www.",
                  {
                    "Ref": "DomainName"
                  }
                ]
              ]
            }
          ]
        }
      }
    },
    "HostedZone": {
      "Type": "AWS::Route53::HostedZone",
      "Properties": {
        "HostedZoneConfig": {
          "Comment": "This hosted zone created by amazon-s4-hosting"
        },
        "Name": {
          "Ref": "DomainName"
        },
        "HostedZoneTags": [
          {
            "Key": "hosting",
            "Value": "amazon-s4-hosting"
          }
        ]
      }
    },
    "RecordSets": {
      "Type": "AWS::Route53::RecordSetGroup",
      "Properties": {
        "HostedZoneName": {
          "Fn::Join": [
            "",
            [
              {
                "Ref": "DomainName"
              },
              "."
            ]
          ]
        },
        "RecordSets": [
          {
            "Name": {
              "Ref": "DomainName"
            },
            "Type": "A",
            "AliasTarget": {
              "HostedZoneId": "Z2FDTNDATAQYW2",
              "DNSName": {
                "Fn::GetAtt": [
                  "SiteCDN",
                  "DomainName"
                ]
              }
            }
          },
          {
            "Name": {
              "Fn::Join": [
                "",
                [
                  "www.",
                  {
                    "Ref": "DomainName"
                  }
                ]
              ]
            },
            "Type": "A",
            "AliasTarget": {
              "HostedZoneId": "Z2FDTNDATAQYW2",
              "DNSName": {
                "Fn::GetAtt": [
                  "SiteCDNWWW",
                  "DomainName"
                ]
              }
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "CDN": {
      "Value": {
        "Ref": "SiteCDN"
      },
      "Description": "CloudFront CDN"
    },
    "CDNWWW": {
      "Value": {
        "Ref": "SiteCDNWWW"
      },
      "Description": "CloudFront CDN for www"
    },
    "HostedZone": {
      "Value": {
        "Ref": "HostedZone"
      },
      "Description": "Dont' forget to change NS records with your domain registrar"
    },
    "BucketName": {
      "Value": {
        "Ref": "Bucket"
      },
      "Description": "Name of S3 bucket to hold website content"
    }
  }
}
